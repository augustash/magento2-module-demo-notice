<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="global.notices">
            <block class="Magento\Framework\View\Element\Template" name="demo_ribbon" template="Augustash_DemoRibbon::notices.phtml" after="-" ifconfig="ash/demo_ribbon/ribbon_enabled">
                <arguments>
                    <argument name="view_model" xsi:type="object">Augustash\DemoRibbon\ViewModel\RibbonNotice</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
